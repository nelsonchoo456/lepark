enum PARK_STATUS_ENUM {
  OPEN  
  UNDER_CONSTRUCTION
  LIMITED_ACCESS
}

model Park {
  id           String     @id @default(uuid()) @db.Uuid
  name         String
  description  String
  parkStatus   String     @unique
  openingHours DateTime[]
  closingHours DateTime[]
  geom         String
  paths        String
}

model Visitor {
  id            String @id @default(uuid()) @db.Uuid
  firstName     String
  lastName      String
  email         String @unique
  password      String
  contactNumber String
}
